@model AstrophotoBG.Models.UpdatePictureViewModel
@{
    ViewData["Title"] = Model.Name;
}
<div class="container secondaryPage">
    <form asp-controller="Pictures" asp-action="UpdatePicture" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Technique"></label>
            <input asp-for="@Model.Technique" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Description"></label>
            <textarea asp-for="@Model.Description" class="form-control" rows="4"></textarea>
        </div>
        <button class="button button-secondary" type="submit">Запази промените</button>
    </form>

    <form asp-controller="Pictures" asp-action="DeletePicture" method="post" enctype="multipart/form-data">
        <button type="submit" asp-controller="Pictures" asp-action="DeletePicture" asp-route-id="@Model.Id">Изтрий</button>
    </form>
</div>