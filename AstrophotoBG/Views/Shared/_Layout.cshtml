@using AstrophotoBG.Data.Enumerations;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />
</head>
<body>
    <header id="navigation">
        <nav class="navbar navbar-expand-lg navbar-toggleable-md navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><span id="brand"><b> АстрофотоBG</b></span></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"><i class="fas fa-bars" style="color: #ebb134; font-size: 28px;"></i></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex flex-lg-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul id="navItems" class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><b class="navButtons">Начало</b></a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Gallery" asp-action="Pictures"><b class="navButtons">Галерия</b></a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" href="/#forSite"><b class="navButtons">За сайта</b></a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" href="/#forUs"><b class="navButtons">За нас</b></a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FAQ"><b class="navButtons">FAQ</b></a>
                        </li>
                        @if (this.User.IsInRole(Roles.Administrator.ToString()))
                        {
                            <li>
                                <div class="dropdown show">
                                    <a class="nav-link" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <b class="navButtons"> Админ бутон</b>
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="DeleteUser">Изтрий потребител</a>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="DeletePicture">Изтрий снимка</a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="render">
        <main style="padding-top:55px" role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted row text-center">
        <div class="col-lg-4 copyRight">&copy; 2020 - @System.DateTime.Now.Year - AstrophotoBG</div>

        <div class="col-lg-4">
            <a href="https://www.facebook.com/%D0%90%D1%81%D1%82%D1%80%D0%BE%D1%84%D0%BE%D1%82%D0%BEBG-105956648214786"><i class="fab fa-facebook fa-2x fa-cog"></i></a>
            <a href="https://www.instagram.com/astrophotobg/"><i class="fab fa-instagram fa-2x fa-cog"></i></a>
            <a href="https://www.youtube.com/channel/UCJaO9-Sz5atGnLXIIgHitCQ"><i class="fab fa-youtube fa-2x fa-cog"></i></a>
        </div>

        <div class="col-lg-4">
            <a asp-controller="Home" asp-action="ThermsOfUse">Правила за ползване</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
