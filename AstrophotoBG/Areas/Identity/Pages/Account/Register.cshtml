@page "/Account/Register"
@model RegisterModel
@{
    ViewData["Title"] = "АстрофотоBG - Регистрация";
}

<div class="container secondaryPage">
    <h1>Регистрация</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Създайте нов профил.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Location"></label>
                    <input asp-for="Input.Location" class="form-control" />
                    <span asp-validation-for="Input.Location" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ShortDescription"></label>
                    <textarea asp-for="Input.ShortDescription" class="form-control"></textarea>
                    <span asp-validation-for="Input.ShortDescription" class="text-danger"></span>
                </div>

                <div style="font-size:small">
                    <input asp-for="Input.HasReadThermsOfUse" type="checkbox"/>
                    <label asp-for="Input.HasReadThermsOfUse">Съгласявам се с <a asp-controller="Home" asp-action="ThermsOfUse">правилата за ползване</a> на този сайт</label>
                </div>

                <button type="submit" class="button button-secondary">Регистрация</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
