@page "/Account/Manage/DescAndLocation"
@model DescAndLocationModel
@{
    ViewData["Title"] = "АстрофотоBG - Профил";
    ViewData["ActivePage"] = ManageNavPages.DescAndlocation;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <input asp-for="Location" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"> </textarea>
            </div>
            <button id="update-profile-button" type="submit" class="button button-secondary">Запази</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
