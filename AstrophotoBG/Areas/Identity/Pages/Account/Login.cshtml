@page "/Account/Login"
@model LoginModel

@{
    ViewData["Title"] = "АстрофотоBG - Вход";
}

<div class="container secondaryPage">
    <h1>Вход</h1>

    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h4>Влезте в своя профил.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="button button-secondary">Вход</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрирай се</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <section class="col">
                <h4>Чрез социална мрежа:</h4>
                <hr />
                    <form asp-controller="Users" asp-action="ExternalLogin">
                        <button type="submit" class="fb btn" name="provider" value="Facebook">
                            <i class="fab fa-facebook fa-fw"></i> Влез чрез Facebook
                        </button>

                        <button type="submit" class="google btn" name="provider" value="Google">
                            <i class="fab fa-google fa-fw"></i> Влез чрез Google
                        </button>
                    </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
